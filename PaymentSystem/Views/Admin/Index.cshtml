@using PaymentSystem.Models.Transaction;
@model IEnumerable<TransactionDTO>

<style>
    body {
        background-color: #2a2a2a;
        color:white;
    }
    .table {
        width: 80%;
        border-collapse: collapse;
        margin: 0 auto;
        font-size: 15px;
    }

    .table th {
        background-color: black;
        color: white;
        padding: 12px;
        text-align: left;
    }

    .table td {
        padding: 10px 12px;
        border-bottom: 1px solid black;
        font-size: 18px;
    }

    .admin-confirm,
    .admin-reject {
        width: 120px;
        padding: 6px 12px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        margin: 0 auto;
        margin-top: 20px;
    }

    .admin-confirm {
        background-color: #444;
        color: white;
        margin-right: 30px;
    }

    .admin-reject {
        background-color: #444;
        color: white;
    }
</style>
 

<h2 style="display:flex;justify-content:center;font-size:35px; margin-bottom:50px;">ADMIN</h2>
@if (Model.Any())
{
    <table class="table text-white">
        <thead>
            <tr>
                <th>TransactionId</th>
                <th>UserId</th>
                <th>Amount</th>
                <th>TransactionType</th>
                <th>Response</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TransactionId</td>
                    <td>@item.UserId</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.TransactionType</td>
                    <td style="width:200px">
                        <form action="@Url.Action("AdminResponse", "Admin")" method="post">
                            <input type="hidden" name="transactionId" value="@item.TransactionId" />
                            <button type="submit" name="action" value="confirm" class="admin-confirm">Confirm</button>
                            <button type="submit" name="action" value="reject" class="admin-reject">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div style="display:flex;justify-content:center;">
        <p><b style="font-size:35px">No Information</b></p>
    </div>
}
