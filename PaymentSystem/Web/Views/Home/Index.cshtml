<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #2a2a2a;
        }
        .custom-card {
            transition: transform 0.2s;
        }

            .custom-card:hover {
                transform: translateY(-5px);
            }

        .action-link {
            color: #2c3e50;
            transition: all 0.3s;
            display: block;
            padding: 8px;
            text-decoration: none;
        }

            .action-link:hover {
                color: #3498db;
                background-color: #f8f9fa;
                padding-left: 15px;
            }

        .card-header {
            background: linear-gradient(45deg, #3498db, #2980b9) !important;
        }

        .list-group-item {
            border-left: 3px solid transparent;
            transition: all 0.3s;
        }

            .list-group-item:hover {
                border-left: 3px solid #3498db;
                background-color: #f8f9fa;
            }

        .account-status {
            padding: 3px 8px;
            border-radius: 12px;
            background-color: #2ecc71;
            color: white;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg custom-card">
                    <div class="card-header text-white">
                        <h3 class="mb-0 font-weight-bold"></h3>
                    </div>
                    <div class="card-body bg-light">
                        <h5 class="card-title text-primary mb-4">Hello, @ViewBag.UserName!</h5>
                        <p class="card-text lead">
                            Welcome to our payment system. Here you can manage transactions.
                        </p>
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card mb-3 shadow-sm custom-card">
                                    <div class="card-body">
                                        <h5 class="card-title text-primary">Quick Actions</h5>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <a href="@Url.Action("Index", "Admin", new { area = "" })" class="action-link">
                                                    <i class="fas fa-history me-2"></i>View Transactions
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card shadow-sm custom-card">
                                    <div class="card-body">
                                        <h5 class="card-title text-primary">Account Overview</h5>
                                        <div class="card-text mt-3">
                                            <p class="mb-2">
                                                <i class="fas fa-clock me-2"></i>
                                                <strong>Last Login:</strong>
                                                <span class="text-muted">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
                                            </p>
                                            <p class="mb-2">
                                                <i class="fas fa-check-circle me-2"></i>
                                                <strong>Account Status:</strong>
                                                <span class="account-status">Active</span>
                                            </p>
                                            <p class="mb-2">
                                                <i class="fas fa-user-shield me-2"></i>
                                                <strong>Role:</strong>
                                                <span class="text-primary">@(User.IsInRole("Admin") ? "Administrator" : "User")</span>
                                            </p>
                                            <a class="action-link" style="cursor:pointer" asp-action="Logout" asp-controller="Account">
                                                <i class="fas fa-history me-2"></i>Logout
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>